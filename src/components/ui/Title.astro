---
interface Props {
  plainText: string;
  colorText: string;
}

const { plainText, colorText } = Astro.props;
---

<h1
  class="text-[32px] text-center leading-[50px] md:text-left lg:text-[64px] lg:leading-[90px]"
>
  <span>
    {plainText}
  </span>
  <span
    class="font-bold bg-gradient-to-t from-yellow-200 to-pink-400 inline-block text-transparent bg-clip-text"
  >
    {colorText}
  </span>
</h1>
